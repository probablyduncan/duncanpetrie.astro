---
import type { ArticlePoetryLayoutOptions } from "../../lib/articleHeaderComponentRegistry";
import Image from "../Image.astro";
import TickerNav from "../TickerNav.astro";

interface Props extends ArticlePoetryLayoutOptions {
    title: string;
    date: Date;
}
const { title, subtitle, date, image, ticker } = Astro.props;
---

{ticker === true && <TickerNav />}
<header>
    <p><b>{title.toUpperCase()}</b></p>
    <p>
        <i>
            {subtitle}
            <br />
            {
                new Intl.DateTimeFormat("en-US", {
                    month: "long",
                }).format(date)
            }
            {date.getFullYear()}
        </i>
    </p>
</header>
{
    image && (
        <div>
            <Image {...image} captionAccent={false} captionAlign="right" />
        </div>
    )
}
<style>
    header {
        width: 400px;
        max-width: 100%;
        padding: 20px 0;
        border-top: 2px solid var(--color-text);
        border-bottom: 2px solid var(--color-text);
        text-align: center;
        margin: calc(var(--ticker-height) + 30px) 0 30px;
    }

    header p {
        width: 70%;
        margin-left: 15%;
        line-height: 1.6em;
    }

    div {
        width: 600px;
        max-width: 100%;
        margin: 10px 0 20px;
    }

    @media screen and (max-width: 700px) {
        header {
            border-top: none;
            padding: 0 0 40px;
            margin-bottom: 40px;
        }
    }
</style>
