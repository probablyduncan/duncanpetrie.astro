---
import { resolveLink } from "../lib/linkResolver";

interface Props {
    href: string;
    title?: string;
    newTab?: boolean;
}

const { href, title, newTab } = Astro.props;
const innerHtml = await Astro.slots.render("default");
const resolved = resolveLink({ href, innerHtml, title, forceNewTab: newTab });
---

<a {...resolved}><slot /></a>
